{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node ./dist/index.js",
    "back-dev": "concurrently \"npm run ts-watch\" \"npm run tw-watch\" \"npm run node-watch\" ",
    "node-watch": "nodemon dist/index.js",
    "ts-watch": "npx tsc -w",
    "tw-watch": "npx tailwindcss -i ./src/css/input.css -o ./dist/public/output.css --watch",
    "build-ts": "npx tsc",
    "build-tw": "npx tailwindcss -i ./src/css/input.css -o ./dist/public/output.css",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "express-handlebars": "^7.0.4",
    "mongoose": "^7.0.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "jest": "^29.5.0",
    "tailwindcss": "^3.2.7"
  }
